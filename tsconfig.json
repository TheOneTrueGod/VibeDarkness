{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["app/js/**/*.ts", "app/js/**/*.tsx", "vite-env.d.ts"]
}
