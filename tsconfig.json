{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "outDir": "app/js-out",
    "rootDir": "app/js",
    "moduleResolution": "bundler",
    "noImplicitAny": true
  },
  "include": ["app/js/**/*.ts"]
}
